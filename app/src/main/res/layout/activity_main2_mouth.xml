<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Main2Activity_tapping"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <!--<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <!--xmlns:tools="http://schemas.android.com/tools"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--tools:context=".Main2Activity_tapping">-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/mouthsound">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#333"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="- Tapping sound -"
                    android:textColor="#fff"
                    android:layout_margin="20dp" />

                <SeekBar
                    android:id="@+id/playbar1"
                    android:layout_height="wrap_content"
                    android:layout_width="320dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:progress="0"
                    android:padding="10dp"
                    android:max="60000" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="50dp"
                    android:textColor="#fff" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#333"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/button1-1"
                        android:layout_height="30dp"
                        android:layout_width="75dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginRight="10dp"
                        android:text="PLAY"
                        android:textColor="#fff"
                        android:background="#444"/>

                    <Button
                        android:id="@+id/button1-2"
                        android:layout_height="30dp"
                        android:layout_width="75dp"
                        android:layout_marginRight="10dp"
                        android:text="PAUSE"
                        android:textColor="#fff"
                        android:background="#444"/>

                    <Button
                        android:id="@+id/button1-3"
                        android:layout_height="30dp"
                        android:layout_width="75dp"
                        android:text="STOP"
                        android:textColor="#fff"
                        android:background="#444"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="- Tapping sound -"
                    android:layout_margin="20dp"
                    android:textColor="#fff"/>

                <SeekBar
                    android:id="@+id/playbar2"
                    android:layout_height="wrap_content"
                    android:layout_width="320dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:progress="0"
                    android:padding="10dp"
                    android:max="60000" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="#fff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#333"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/button2-1"
                        android:layout_height="30dp"
                        android:layout_width="75dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginRight="10dp"
                        android:text="PLAY"
                        android:textColor="#fff"
                        android:background="#444"/>

                    <Button
                        android:id="@+id/button2-2"
                        android:layout_height="30dp"
                        android:layout_width="75dp"
                        android:layout_marginRight="10dp"
                        android:text="PAUSE"
                        android:textColor="#fff"
                        android:background="#444"/>

                    <Button
                        android:id="@+id/button2-3"
                        android:layout_height="30dp"
                        android:layout_width="75dp"
                        android:layout_marginRight="10dp"
                        android:text="STOP"
                        android:textColor="#fff"
                        android:background="#444"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="- Tapping sound -"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    android:textColor="#fff"/>

                <SeekBar
                    android:id="@+id/playbar3"
                    android:layout_height="wrap_content"
                    android:layout_width="320dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:progress="0"
                    android:padding="10dp"
                    android:max="60000" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="#fff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#333"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/button3-1"
                        android:layout_height="30dp"
                        android:layout_width="75dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginRight="10dp"
                        android:text="PLAY"
                        android:textColor="#fff"
                        android:background="#444"/>

                    <Button
                        android:id="@+id/button3-2"
                        android:layout_height="30dp"
                        android:layout_width="75dp"
                        android:layout_marginRight="10dp"
                        android:text="PAUSE"
                        android:textColor="#fff"
                        android:background="#444"/>

                    <Button
                        android:id="@+id/button3-3"
                        android:layout_height="30dp"
                        android:layout_width="75dp"
                        android:layout_marginRight="10dp"
                        android:text="STOP"
                        android:textColor="#fff"
                        android:background="#444"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>